<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myaplication.tfg.org.myapplication" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <!-- for most things, including card.io & paypal -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_laucher"
        android:label="@string/app_name" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FisrtPage"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".shopCart"
            android:label="@string/title_activity_shop_cart"
            android:parentActivityName=".FisrtPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="myaplication.tfg.org.myapplication.FisrtPage" />
        </activity>
        <activity
            android:name=".IndividualItemInfo"
            android:label="@string/title_activity_individual_item_info"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".MasVendidos"
            android:label="@string/title_activity_mas_vendidos"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".News"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".soapTest"
            android:label="@string/title_activity_soap_test"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".CheckOutList"
            android:label="@string/title_activity_check_out_list"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".CustomerInfo"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".AddressInfo"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".ShippingMethodInfo"
            android:label="@string/title_activity_shipping_and_payment_method"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Sample"
            android:label="@string/title_activity_sample" >
        </activity>

        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />
        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />
        <activity
            android:name=".PaymentMethodInfo"
            android:label="@string/title_activity_payment_method_info"
            android:theme="@style/AppTheme"
            >
        </activity>
    </application>

</manifest>
