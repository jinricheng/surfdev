<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="myaplication.tfg.org.myapplication.ShippingAndPaymentMethod"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/shipping_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Shipping Method: "
        android:textSize="30dp"
        android:textStyle ="bold"
        android:textColor="#FF4000"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        />

    <RadioGroup
        android:id = "@+id/shipping_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/shipping_method"
        android:orientation="vertical">
    </RadioGroup>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/shipping_group"
        android:background="#0404B4"/>

    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="Payment Method: "
        android:layout_below="@+id/line"
        android:textSize="30dp"
        android:textStyle ="bold"
        android:textColor="#FF4000"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        />

    <RadioGroup
        android:id = "@+id/payment_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/payment_method"
        android:orientation="vertical">
    </RadioGroup>
</RelativeLayout>
