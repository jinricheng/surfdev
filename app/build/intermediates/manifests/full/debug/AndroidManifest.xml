            android:theme="@style/AppTheme"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="myaplication.tfg.org.myapplication.shopCart"
            android:label="@string/title_activity_shop_cart"
            android:parentActivityName="myaplication.tfg.org.myapplication.FisrtPage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="myaplication.tfg.org.myapplication.FisrtPage" />
        </activity>
        <activity
            android:name="myaplication.tfg.org.myapplication.IndividualItemInfo"
