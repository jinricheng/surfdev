            android:name="myaplication.tfg.org.myapplication.MasVendidos"
            android:label="@string/title_activity_mas_vendidos"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="myaplication.tfg.org.myapplication.News"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="myaplication.tfg.org.myapplication.soapTest"
            android:label="@string/title_activity_soap_test"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>