<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/check_out_selector"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/check_out_images"
        android:layout_width="80dip"
        android:layout_height="90dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
        />


    <TextView android:id="@+id/check_out_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/check_out_images"
    android:textSize="16sp"
    android:textColor="#000"
    />

    <TextView
        android:id="@+id/check_out_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_out_title"
        android:layout_toRightOf="@+id/check_out_images"
        android:layout_marginRight="15dp"
        android:textSize="18dp"
        android:layout_marginTop="5dp"

        android:textColor="#000"/>

    <TextView
        android:id="@+id/check_out_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_out_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textColor="#000"/>
</RelativeLayout>


</LinearLayout>
